    {
      "cell_type": "code",
      "source": [
        "# -*- coding: utf-8 -*-\n",
        "import requests\n",
        "from bs4 import BeautifulSoup\n",
        "import re\n",
        "\n",
        "# Step1. スクレイピング\n",
        "url = \"https://www.aozora.gr.jp/cards/000148/files/2371_13943.html\"\n",
        "response = requests.get(url)\n",
        "response.encoding = response.apparent_encoding  # 文字化け対策\n",
        "\n",
        "soup = BeautifulSoup(response.text, \"html.parser\")\n",
        "\n",
        "# 本文部分を取得\n",
        "# 青空文庫の本文は <div class=\"main_text\"> にあることが多い\n",
        "# 今回は body 内のテキスト全体から前後の不要部分を削除\n",
        "text = soup.get_text()\n",
        "\n",
        "# Step2. HTMLタグや不要な文字列の削除\n",
        "# 不要な改行・空白を削除\n",
        "text = re.sub(r'\\r\\n', '', text)\n",
        "text = re.sub(r'\\n', '', text)\n",
        "text = re.sub(r' +', ' ', text)\n",
        "\n",
        "# 青空文庫の前書きや後書き、注釈などを削除する場合は適宜切り出す\n",
        "# 今回はサンプルとして、全テキストを取得\n",
        "print(\"=== 前処理後の本文（冒頭100文字） ===\")\n",
        "print(text[:100])\n",
        "\n",
        "# Step3. 最初の1文を抽出（例: 「近頃は～思っています。」）\n",
        "# ここでは句点「。」で最初の文を切り出す\n",
        "first_sentence_match = re.search(r'近頃は.*?。', text)\n",
        "first_sentence = first_sentence_match.group() if first_sentence_match else \"\"\n",
        "\n",
        "print(\"\\n=== 最初の1文 ===\")\n",
        "print(first_sentence)\n",
        "\n",
        "# 品詞ごとに区切る（ここでは手動で簡易的に単語分割）\n",
        "# 日本語の簡易分割（サンプルとして）\n",
        "words = re.findall(r'\\w+|[ぁ-んァ-ン一-龥]', first_sentence)\n",
        "\n",
        "# ストップワードの例（自分で設定）\n",
        "stop_words = ['は', 'を', 'が', 'に', 'の', 'と', 'で', 'も', 'です', 'ます']\n",
        "\n",
        "# ストップワードを除去\n",
        "filtered_words = [w for w in words if w not in stop_words]\n",
        "\n",
        "print(\"\\n=== ストップワード除去後 ===\")\n",
        "print(filtered_words)"
      ],
