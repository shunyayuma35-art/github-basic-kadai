        "<!-- crud/templates/crud/product_list.html -->\n",
        "<h1>商品一覧</h1>\n",
        "<ul>\n",
        "  {% for product in products %}\n",
        "    <li>\n",
        "      {{ product.name }} - <a href=\"{% url 'product_detail' product.pk %}\">詳細</a>\n",
        "    </li>\n",
        "  {% endfor %}\n",
        "</ul>"
