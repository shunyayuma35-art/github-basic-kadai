        "# Humanクラスの定義\n",
        "class Human:\n",
        "    def __init__(self, name, age):\n",
        "        self.name = name   # 名前\n",
        "        self.age = age     # 年齢\n",
        "\n",
        "    # 成人かどうか判定するメソッド\n",
        "    def check_adult(self):\n",
        "        if self.age >= 20:\n",
        "            print(self.name, \"さんは大人です\")\n",
        "        else:\n",
        "            print(self.name, \"さんは大人ではありません\")\n",
        "\n",
        "\n",
        "# -------- 関数を使って Human インスタンスを作る（関数の利用） --------\n",
        "def create_human(name, age):\n",
        "    return Human(name, age)\n",
        "\n",
        "\n",
        "# -------- Human インスタンスを複数作成しリストに保存 --------\n",
        "human_list = [\n",
        "    create_human(\"太郎\", 25),\n",
        "    create_human(\"花子\", 18),\n",
        "    create_human(\"次郎\", 20)\n",
        "]\n",
        "\n",
        "# -------- 繰り返し処理で全員の成人判定を実行 --------\n",
        "for human in human_list:\n",
        "    human.check_adult()"
      ],
