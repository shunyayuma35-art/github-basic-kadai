        "# 台形の各辺の長さ（cm）\n",
        "top = 10     # 上辺\n",
        "bottom = 20  # 下辺\n",
        "height = 5   # 高さ\n",
        "\n",
        "# 面積の計算（台形の面積 =（上辺＋下辺）× 高さ ÷ 2）\n",
        "area = (top + bottom) * height / 2\n",
        "\n",
        "# 結果の出力（数値＋文字列）\n",
        "print(str(area) + \"cm²\")"
